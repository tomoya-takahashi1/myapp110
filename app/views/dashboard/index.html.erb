<div id="container">
  <p style="margin: 0;" id="message">今日のメニューが決まらない方は<br>ボタンを押してください</p>
  <button id="randomButton" onclick="hideButton()">ボタンを押す</button>
  <p id="result"></p>
</div>
<script>
  const message = document.getElementById("message");
  const result = document.getElementById("result");

  function hideButton() {
  randomButton.style.display = "none";
  generateMenu();
  }

  function generateMenu() {
    var exercises = ["腕立て", "腹筋", "背筋", "スクワット"];
    var reps = Math.floor(Math.random() * 30) + 1;
    var selectedExercise = exercises[Math.floor(Math.random() * exercises.length)];
    var additionalMessage = "今日のメニューが決まりました！";
    message.innerHTML = additionalMessage;
    var resultText = "種目: " + selectedExercise + "<br>回数: " + reps;
    result.innerHTML = resultText;
    }
</script>
