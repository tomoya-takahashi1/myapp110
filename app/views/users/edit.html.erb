<div class="container mt-5 pt-5">
   <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>
<div class="extra-top-margin"></div>
<div class="container-fluid py-5 mt-5" >
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="card shadow">
          <div class="card-body">
            <h4 class="card-title text-center mb-4">プロフィール編集</h4>
            <% if flash[:notice] %>
              <p class="notice text-center"><%= flash[:notice] %></p>
            <% end %>
            <%= form_for @user, class: "styled-form" do |f| %>  
              <div class="mb-3">
                <%= f.label :profile_image_id, "アイコン画像", class: "form-label" %>
                <%= f.file_field :profile_image_id, class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :name, "名前", class: "form-label" %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :profile, "目標", class: "form-label" %>
                <%= f.text_area :profile, class: "form-control" %>
              </div>
             <div class="actions mt-3 text-center">
            <div class="row">
              <div class="col-md-6 mb-2">
                <%= f.submit "更新を完了する", class: "btn btn-primary btn-lg btn-block" %>
              </div>
                <div class="col-md-6">
                  <%= link_to "キャンセル", user_path(current_user), class: "btn btn-secondary btn-lg btn-block colorful-btn red-link" %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div style="margin-bottom: 200px;"></div>

<style>
  .extra-top-margin {
    margin-top: 100px; 
  }
  
</style>
