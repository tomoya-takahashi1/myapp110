    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/484e6509e8.js" crossorigin="anonymous"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
      const popularPosts = document.getElementById("popular-posts");
      const newPosts = document.getElementById("new-posts");
      const showPopularPosts = function() {
        newPosts.style.display = "none";
        popularPosts.style.display = "block";
      };
      const hidePopularPosts = function() {
      popularPosts.style.display = "none";
      newPosts.style.display = "block";
      };
      const popularPostsLink = document.getElementById("popular-posts-link");
      popularPostsLink.addEventListener("click", function(event) {
       event.preventDefault();
       showPopularPosts();
      });
      const newPostsLink = document.getElementById("new-posts-link");
      newPostsLink.addEventListener("click", function(event) {
      event.preventDefault();
      hidePopularPosts();
      });
     });
    </script>
  </head>
  <body>
    <header>        
      <%= render "shared/header" %>
    </header>
    <%= yield %>
  </body>
</html>
