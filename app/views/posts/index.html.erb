<div class="container mt-5 pt-5">
   <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div class="bd-example text-center mt-5" style="position: relative;">
  <h2>
    <%= @posts.first.user.name if @posts.present? %>さんの投稿一覧
  </h2>
</div>

<div class="bd-example" style="position: relative; text-align: center; max-width: 600px; margin: 0 auto;">
  <img src="https://www.d-sp.co.jp/maebashi/wp/wp-content/uploads/2020/06/shutterstock_311106002.jpg" class="img-fluid" alt="Responsive image" width="100%">
</div>
<div style="margin-bottom: 80px;"></div>
<div class="table-responsive">
  <% if @posts.any? %>
  <p class="text-center"><%= @posts.length %> 件の投稿があります</p>
    <table class="table custom-table" style="margin: 0 auto; max-width: 800px;">
      <thead class="thead-dark">
        <tr>
          <th scope="col" style="width: 15%; text-align: center;">種目</th>
          <th scope="col" style="width: 15%; text-align: center;">投稿者</th>
          <th scope="col" style="width: 10%; text-align: center;">回数</th>
          <th scope="col" style="width: 20%; text-align: center;">器具、<br>プロテイン</th>
          <th scope="col" style="width: 15%; text-align: center;">トレーニング部位</th>
          <th scope="col" style="width: 25%; text-align: center;">作成日</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td class="text-center py-2">
              <%= post.name %>
            </td>
            <td class="text-center py-2">
              <%= post.user.name %>
            </td>
            <td class="text-center py-2">
              <%= post.set %>
            </td>
            <td class="text-center py-2">
              <%= post.introduction %>
            </td>
            <td class="text-center py-2">
              <%= post.muscle %>
            </td>
            <td class="text-center py-2">
              <%= post.created_at.to_s(:datetime_jp) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center">投稿がまだありません</p>
  <% end %>
</div>
<div style="margin-bottom: 230px;"></div>


<style>
.fixed_to_post_link {
  position: fixed;
  bottom: 20px; /* 画面下からの距離を調整 */
  right: 20px; /* 画面右からの距離を調整 */
  background-color: #007bff; /* バックグラウンド色を設定 */
  color: #fff; /* テキストの色を設定 */
  padding: 10px 20px; /* パディングを設定 */
  border-radius: 5px; /* 角丸を設定 */
  text-decoration: none; /* テキストの下線を削除 */
}

.fixed_to_post_link:hover {
  background-color: #0056b3; /* ホバー時のバックグラウンド色を設定 */
}
</style>

<a class="fixed_to_post_link" href="/posts/new">＋投稿する</a>
